{
  "expo": {
    "name": "Recycoil",
    "slug": "Recycoil",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-no-background.png",
    "scheme": "recycoil.inv",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.recycoil.inv"
    },
    "android": {
      "package": "com.recycoil.inv",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-no-background.png",
        "backgroundColor": "#E9FEB1"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo-no-background.png"
    },
    "plugins": [
      "react-native-edge-to-edge",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash icon/hdpi.png",
          "resizeMode": "cover",
          "dark": {
            "backgroundColor": "#141514"
          },
          "android": {
            "backgroundColor": "#ECE499",
            "resizeMode": "cover",
            "image": "./assets/images/splash icon/hdpi.png", 
            "mdpi": "./assets/images/splash icon/mdpi.png",
            "hdpi": "./assets/images/splash icon/hdpi.png",
            "xhdpi": "./assets/images/splash icon/xhdpi.png",
            "xxhdpi": "./assets/images/splash icon/xxhdpi.png",
            "xxxhdpi": "./assets/images/splash icon/xxxhdpi.png",
            "dark": {
              "backgroundColor": "#141514"
            }
          }
        }
      ],
      "react-native-edge-to-edge",
      "expo-secure-store",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8a01ca2e-c641-4085-994e-7f509db35f9a"
      }
    }
  }
}
